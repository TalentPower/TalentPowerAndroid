<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:id="@+id/card_pertanyaan"
    card_view:cardBackgroundColor="#FFFF"
    card_view:cardCornerRadius="8dp"
    card_view:contentPadding="10dp"
    android:foreground="?selectableItemBackground"
    android:clickable="true">

<RelativeLayout
    android:layout_marginStart="10sp"
    android:layout_marginEnd="10sp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/txtNameRoute"
        android:layout_width="wrap_content"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="Name Ruta" />

    <TextView
        android:id="@+id/textView10"
        android:layout_below="@+id/txtNameRoute"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Cliente:" />

    <TextView
        android:id="@+id/textView11"
        android:layout_below="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="10sp"
        android:text="Obreros Solicitados:" />

    <TextView
        android:id="@+id/textView12"
        android:layout_marginTop="10sp"
        android:layout_below="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Obreros Reclutados:" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_below="@+id/textView12"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:textColor="@color/black"
        android:text="Asistentes: " />

    <TextView
        android:id="@+id/txtRvCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:layout_marginStart="5sp"
        android:textColor="@color/black"
        android:layout_below="@id/txtNameRoute"
        android:layout_toEndOf="@+id/textView10"
        android:text="TextView" />

    <TextView
        android:id="@+id/txtRvObSolicitados"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtRvCliente"
        android:layout_toEndOf="@+id/textView11"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5sp"
        android:textColor="@color/black"
        android:text="TextView" />

    <TextView
        android:id="@+id/txtRvObReclutados"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtRvObSolicitados"
        android:layout_toEndOf="@+id/textView11"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5sp"
        android:textColor="@color/black"
        android:text="TextView" />

    <TextView
        android:id="@+id/txtRvAsistentes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtRvObReclutados"
        android:layout_toEndOf="@+id/textView11"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5sp"
        android:textColor="@color/black"
        android:text="TextView" />

    <Button
        android:id="@+id/btnRvSeeRoute"
        android:layout_width="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/txtRvCliente"
        android:layout_height="wrap_content"
        android:text="Ver ruta" />


</RelativeLayout>

</androidx.cardview.widget.CardView>