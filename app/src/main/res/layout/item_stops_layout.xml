<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:id="@+id/card_pertanyaan"
    card_view:cardBackgroundColor="#FFFF"
    card_view:cardCornerRadius="8dp"
    card_view:contentPadding="10dp"
    android:foreground="?selectableItemBackground"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView9"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre: " />

        <TextView
            android:id="@+id/txtNameStop"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_toEndOf="@id/textView9"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/btnImgEditStop"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView15"
            android:layout_below="@id/txtNameStop"
            android:textSize="13sp"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hora: " />

        <TextView
            android:id="@+id/txtTimeStop"
            android:layout_below="@id/txtNameStop"
            android:layout_toEndOf="@id/textView15"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/btnImgDeleteStop"
            android:layout_width="30dp"
            android:layout_marginTop="10dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            card_view:srcCompat="@drawable/ic_delete_24" />

        <ImageView
            android:id="@+id/btnImgEditStop"
            android:layout_width="30dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:layout_toStartOf="@id/btnImgDeleteStop"
            android:layout_height="30dp"
            card_view:srcCompat="@drawable/ic_edit_24" />


    </RelativeLayout>



</androidx.cardview.widget.CardView>